<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Bleach from Chemfuel -->
    <RecipeDef>
        <defName>BleachFromChemfuel</defName>
        <label>produce bleach from chemfuel</label>
        <description>Produce bleach from chemfuel.</description>
        <jobString>Producing bleach from chemfuel.</jobString>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <workSpeedStat>CookSpeed</workSpeedStat>
        <workAmount>1200</workAmount>
        <targetCountAdjustment>4</targetCountAdjustment>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Chemfuel</li>
                    </thingDefs>
                </filter>
                <count>5</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Chemfuel</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Bleach>1</Bleach>
        </products>
        <skillRequirements>
            <Crafting>3</Crafting>
        </skillRequirements>
        <workSkill>Crafting</workSkill>
        <researchPrerequisite>ChemicalSynthesis</researchPrerequisite>
        <recipeUsers>
            <li>BiofuelRefinery</li>
        </recipeUsers>
    </RecipeDef>


    <!-- Cloth from Apparel -->
    <RecipeDef>
        <defName>ClothFromApparel</defName>
        <label>bleach apparel to recycle it</label>
        <description>Bleach apparel to recycle it.</description>
        <jobString>Recycling apparel.</jobString>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Brewing</soundWorking>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <workAmount>1200</workAmount>
        <targetCountAdjustment>4</targetCountAdjustment>
        <ingredients>
            <li>
                <filter>
                    <customSummary>Cloth from apparel</customSummary>
                    <categories>
                        <li>Apparel</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Bleach</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Apparel</li>
            </categories>
            <thingDefs>
                <li>Bleach</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <BleachedCloth>5</BleachedCloth>
        </products>
        <skillRequirements>
            <Crafting>3</Crafting>
        </skillRequirements>
        <workSkill>Crafting</workSkill>
        <researchPrerequisite>ChemicalSynthesis</researchPrerequisite>
        <recipeUsers>
            <li>ElectricTailoringBench</li>
            <li>HandTailoringBench</li>
        </recipeUsers>
    </RecipeDef>

</Defs>